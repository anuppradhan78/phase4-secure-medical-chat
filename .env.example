# =============================================================================
# Secure Medical Chat Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# See docs/CONFIGURATION_GUIDE.md for detailed configuration scenarios
# See examples/config_examples.py for different configuration examples

# =============================================================================
# CORE CONFIGURATION (Required)
# =============================================================================

# LLM Provider Configuration (REQUIRED)
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-api-key-here
DEFAULT_MODEL=gpt-3.5-turbo
MAX_TOKENS=1000
TEMPERATURE=0.7
LLM_TIMEOUT=30

# Application Environment
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Authentication (REQUIRED - Change in production!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# =============================================================================
# COST MANAGEMENT & OPTIMIZATION
# =============================================================================

# Helicone Proxy for Cost Tracking
HELICONE_API_KEY=sk-helicone-your-api-key-here
COST_LIMIT_DAILY=100.00
COST_ALERT_THRESHOLD=80.0
ENABLE_COST_TRACKING=true

# Response Caching
ENABLE_RESPONSE_CACHE=true
CACHE_TTL_HOURS=24

# =============================================================================
# SECURITY & PRIVACY
# =============================================================================

# PII/PHI Redaction with Microsoft Presidio
ENABLE_PII_REDACTION=true
PRESIDIO_ENTITIES=PERSON,DATE_TIME,PHONE_NUMBER,EMAIL_ADDRESS,MEDICAL_LICENSE,US_SSN,LOCATION
PRESIDIO_LOG_LEVEL=INFO

# Guardrails Configuration
ENABLE_GUARDRAILS=true
ENABLE_LLAMA_GUARD=true
ENABLE_NEMO_GUARDRAILS=true
GUARDRAILS_CONFIG_PATH=config/guardrails

# Medical Safety
ENABLE_MEDICAL_DISCLAIMERS=true

# =============================================================================
# ROLE-BASED ACCESS CONTROL
# =============================================================================

# Rate Limiting per Role
ENABLE_RATE_LIMITING=true
PATIENT_MAX_QUERIES_PER_HOUR=10
PHYSICIAN_MAX_QUERIES_PER_HOUR=100
ADMIN_MAX_QUERIES_PER_HOUR=1000

# RBAC Features
ENABLE_RBAC=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_URL=sqlite:///./secure_medical_chat.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

